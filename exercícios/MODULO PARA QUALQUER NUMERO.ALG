algoritmo "Exponenciaçao para qualquer numero"
var
 Nome:Caractere
 N1,N2:inteiro
 A:Real
inicio
 Escreva ("Ola, qual seu nome? ")
 Leia (Nome)
 Escreva ("Entao ",Nome," , informe um numero: ")
 Leia (N1)
 Escreva ("Informe um outro numero: ")
 Leia (N2)
 A <- Exp(N1,N2)
 Escreva ("O resultado de ",N1," elevado a ",N2," e igual a ",A)
fimalgoritmo